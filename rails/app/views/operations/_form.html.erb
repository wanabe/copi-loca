<%= form_with(model: operation) do |form| %>
  <% if operation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
        <% operation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :command, style: "display: block" %>
    <%= form.text_field :command %>
  </div>

  <div>
    <%= form.label :directory, style: "display: block" %>
    <%= form.text_field :directory %>
  </div>

  <div>
    <%= form.label :execution_timing, "Execution timing", style: "display: block" %>
    <%= form.select :execution_timing, Operation.execution_timings.keys.map { |k| [k.humanize, k] }, {}, {} %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
